{
  "overrides": [
    {
      "files": "src/**/*.js, src/**/*.jsx, src/**/*.ts, src/**/*.tsx, src/**/*.vue",
      "options": {
        "arrowParens": "always",
        "bracketSameLine": false,
        "bracketSpacing": true,
        "semi": true,
        "singleQuote": true,
        "jsxSingleQuote": false,
        "quoteProps": "consistent",
        "trailingComma": "all",
        "singleAttributePerLine": true,
        "htmlWhitespaceSensitivity": "strict",
        "vueIndentScriptAndStyle": true,
        "proseWrap": "preserve",
        "insertPragma": false,
        "printWidth": 160,
        "requirePragma": false,
        "tabWidth": 4,
        "useTabs": true,
        "embeddedLanguageFormatting": "auto",
        "parser": "json",
        "endOfLine": "lf",
        "experimentalTernaries": false
      }
    }
  ]
}