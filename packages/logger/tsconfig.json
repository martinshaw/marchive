{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "CommonJS",
    "lib": ["es2021"],
    "strict": true,
    "sourceMap": true,
    "baseUrl": "src",
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"]
}
