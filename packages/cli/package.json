{
  "name": "cli",
  "private": true,
  "version": "0.0.2",
  "author": "Martin Shaw <developer@martinshaw.co>",
  "description": "",
  "homepage": "https://github.com/martinshaw/marchive/tree/master/packages/cli",
  "repository": "https://github.com/martinshaw/marchive/tree/master/packages/cli",
  "bugs": "https://github.com/martinshaw/marchive/tree/master/packages/cli",
  "main": "src/index.ts",
  "types": "lib/index.d.ts",
  "bin": "./lib/index.js",
  "dependencies": {
    "logger": "workspace:^",
    "typeorm-database": "workspace:^",
    "utilities": "workspace:^",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "20.11.6",
    "reflect-metadata": "^0.2.1",
    "shx": "^0.3.3",
    "ts-loader": "^9.5.1",
    "ts-node": "10.9.1",
    "typescript": "^5.1.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  },
  "packageManager": "pnpm@8.10.2",
  "engines": {
    "pnpm": ">=8.0.0",
    "npm": ">=10.0.0",
    "node": ">=18.0.0"
  },
  "files": [
    "/lib/**/*.js"
  ],
  "scripts": {
    "compile": "shx rm -rf lib && webpack --mode=production",
    "pack:mac": "pnpm run compile && shx rm -rf pack/index.js bin/cli && shx cp lib/index.js pack && cd pack && npm install && npm run pack:mac && shx cp cli ../bin && cd ..",
    "pack:linux": "pnpm run compile && shx rm -rf pack/index.js bin/cli && shx cp lib/index.js pack && cd pack && npm install && npm run pack:linux && shx cp cli ../bin && cd ..",
    "pack:win": "pnpm run compile && shx rm -rf pack/index.js bin/cli && shx cp lib/index.js pack && cd pack && npm install && npm run pack:win && shx cp cli ../bin && cd .."
  },
  "pkg": {
    "scripts": "lib/**/*.js",
    "assets": [
      "assets/**/*"
    ],
    "targets": [
      "node18-macos-x64"
    ],
    "outputPath": "bin"
  }
}