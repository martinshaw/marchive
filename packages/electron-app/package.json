{
  "name": "electron-app",
  "version": "0.11.0",
  "private": true,
  "author": {
    "name": "Martin Shaw",
    "email": "developer@martinshaw.co",
    "url": "https://martinshaw.co"
  },
  "packageManager": "pnpm@8.10.2",
  "engines": {
    "pnpm": ">=8.0.0",
    "npm": ">=10.0.0",
    "node": ">=18.0.0"
  },
  "main": "./src/main/main.ts",
  "scripts": {
    "build": "concurrently \"pnpm run build:main\" \"pnpm run build:renderer\"",
    "build:dll": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.ts",
    "build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.main.prod.ts",
    "build:renderer": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.prod.ts",
    "postinstall": "ts-node .erb/scripts/check-native-dep.js && electron-builder install-app-deps && pnpm run build:dll",
    "package": "ts-node ./.erb/scripts/clean.js dist && pnpm run build && electron-builder build --publish never && pnpm run build:dll",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/app",
    "start": "ts-node ./src/build/close_windows_processes.ts && ts-node ./.erb/scripts/check-port-in-use.js && pnpm run start:renderer",
    "start:main": "cross-env NODE_ENV=development electronmon -r ts-node/register/transpile-only .",
    "start:preload": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.preload.dev.ts",
    "start:renderer": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./.erb/configs/webpack.config.renderer.dev.ts",
    "test": "jest"
  },
  "browserslist": [],
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          ".prettierrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "release/app/node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/.erb/mocks/fileMock.js",
      "\\.(css|less|sass|scss)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "./.erb/scripts/check-build-exists.ts"
    ],
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "testPathIgnorePatterns": [
      "release/app/dist",
      ".erb/dll"
    ],
    "transform": {
      "\\.(ts|tsx|js|jsx)$": "ts-jest"
    }
  },
  "dependencies": {
    "@blueprintjs/core": "^5.9.1",
    "@blueprintjs/icons": "^5.7.1",
    "@formkit/auto-animate": "^0.8.1",
    "@rauschma/stringio": "^1.4.0",
    "@types/react-virtualized": "^9.21.29",
    "@types/sanitize-html": "^2.11.0",
    "@uidotdev/usehooks": "^2.4.1",
    "better-react-carousel": "^1.1.2",
    "change-case-commonjs": "^5.4.4",
    "common-functions": "workspace:^",
    "common-types": "workspace:^",
    "electron-context-menu": "^3.6.1",
    "electron-debug": "^3.2.0",
    "electron-is": "^3.0.0",
    "electron-is-packaged": "^1.0.2",
    "electron-log": "^4.4.8",
    "electron-prompt": "^1.7.0",
    "electron-updater": "^6.1.4",
    "electron-window-state": "^5.0.3",
    "generic-pool": "^3.9.0",
    "logger": "workspace:^",
    "normalize.css": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-json-tree": "^0.18.0",
    "react-router-dom": "^6.22.0",
    "react-virtualized": "^9.22.5",
    "rss-parser": "^3.13.0",
    "sanitize-html": "^2.11.0",
    "source-map-support": "^0.5.21",
    "use-async-memo": "^1.2.5",
    "use-state-with-callback": "^3.0.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.1.0",
    "@electron/rebuild": "^3.3.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
    "@svgr/webpack": "^8.1.0",
    "@teamsupercell/typings-for-css-modules-loader": "^2.5.2",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@types/electron-prompt": "^1.6.5",
    "@types/jest": "^29.5.5",
    "@types/node": "20.6.2",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-test-renderer": "^18.0.1",
    "@types/terser-webpack-plugin": "^5.0.4",
    "@types/uuid": "^9.0.3",
    "@types/webpack-bundle-analyzer": "^4.6.0",
    "browserslist-config-erb": "^0.0.3",
    "chalk": "^4.1.2",
    "concurrently": "^8.2.1",
    "core-js": "^3.32.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "detect-port": "^1.5.1",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "electron-devtools-installer": "^3.2.0",
    "electronmon": "^2.0.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.0.3",
    "react-refresh": "^0.14.0",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^5.0.5",
    "sass": "^1.67.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "types-json": "^4.0.1",
    "typescript": "^5.2.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.88.2",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "build": {
    "productName": "Marchive",
    "appId": "co.martinshaw.marchive",
    "asar": true,
    "asarUnpack": [
      "**\\*.{node,dll}"
    ],
    "files": [
      "dist",
      "node_modules",
      "package.json"
    ],
    "afterSign": ".erb/scripts/notarize.js",
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "legalTrademarks": "All Rights Reserved, (c) 2023 CodeAtlas LTD. (Martin Shaw)"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "app": "release/app",
      "buildResources": "assets",
      "output": "release/build"
    },
    "extraResources": [
      "./assets/**"
    ],
    "extraFiles": [
      {
        "from": "../cli/bin",
        "to": "cli"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "martinshaw",
      "repo": "marchive"
    },
    "protocols": [
      {
        "name": "marchive",
        "schemes": [
          "marchive"
        ]
      }
    ]
  },
  "collective": {
    "url": "https://martinshaw.co"
  },
  "electronmon": {
    "patterns": [
      "!**/**",
      "src/main/**"
    ],
    "logLevel": "quiet"
  }
}